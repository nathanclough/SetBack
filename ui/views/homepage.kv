<HomePage>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            size_hint_y: None
            spacing: 10 
            cols: 1
            id: layout
            Label:
                text: "Setback"
                font_size: '50sp'
                size_hint_y: None
                height: 300
            Label:
                text: root.connection_status_label
                size_hint_y: None 
                height: 20
            Label: 
                text: root.username
            BoxLayout:
                height: 30
                spacing: 10
                orientation: 'horizontal'
                columns: 1
                size_hint_y: None
                TextInput:
                    id: name_input
                    text: "enter user name"
                    size_hint_y: None
                    height: 30
                    multiline: False
                Button:
                    text: 'Submit'
                    on_release: root.update_username(name_input.text)
                    size_hint_y: None
                    height: 30
            BoxLayout:
                height: 30
                orientation: 'horizontal'
                columns: 1
                spacing: 10
                size_hint_y: None
                TextInput:
                    id: game_input
                    size_hint_y: None
                    height: 30
                    multiline: False
                Button:
                    text: 'Create Game'
                    on_release: root.create_lobby(game_input.text)
                    size_hint_y: None
                    height: 30

            GridLayout:
                size_hint_y: None
                spacing: 10 
                cols: 1
                id: button_layout
